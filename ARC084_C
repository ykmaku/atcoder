#include <iostream>
#include <string>
#include <algorithm>
#include <cstdio>
#include <vector>
#include <queue>
#include <set>
#include <numeric>
#include <cmath>

using namespace std;

typedef long long int ll;

#define all(x) x.begin(),x.end()

const ll mod = 1e9+7;
const ll INF = 1e9;
const ll MAXN = 1e9;

int main()
{
    ll n;
    cin >> n;
    vector<ll> a(n),b(n),c(n);
    for(int i = 0; i < n; i++){
        cin >> a[i];
    }
    for(int i = 0; i < n; i++){
        cin >> b[i];
    }
    for(int i = 0; i < n; i++){
        cin >> c[i];
    }

    sort(all(a)),sort(all(c));

    ll ans = 0;
    for(int i = 0; i < n; i++){
        ll A = lower_bound(all(a),b[i]) - a.begin(); //b[i]未満のaの要素の数
        ll C =  n - (upper_bound(all(c),b[i]) - c.begin()); //b[i]より大きいcの要素の数

        ans += A * C;
    }

    cout << ans << endl;

    return 0;
}
