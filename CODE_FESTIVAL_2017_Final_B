#include <iostream>
#include <string>
#include <algorithm>
#include <cstdio>
#include <vector>
#include <queue>
#include <set>
#include <numeric>
#include <cmath>

using namespace std;

typedef long long int lld;

const lld mod = 1e9+7;
const lld INF = 1e9;
//const lld MAXN = 1e9;

int main()
{
	string s;
	cin >> s;
	int cnt[3] = {0};
	for(int i = 0; i < s.size(); i++)
	{
		if(s[i]=='a') cnt[0]++;
		if(s[i]=='b') cnt[1]++;
		if(s[i]=='c') cnt[2]++;
	}

	sort(cnt,cnt+3);
	int x = cnt[0];
	for(int i = 0; i < 3; i++)
	{
		cnt[i] -= x;
		//cout << cnt[i] << endl;
	}

	if (cnt[2]<=1)
	{
		cout << "YES" << endl;
	}else
	{
		cout << "NO" << endl;
	}

	return 0;
}
