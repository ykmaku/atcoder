#include <iostream>
#include <string>
#include <algorithm>
#include <cstdio>
#include <vector>
#include <queue>
#include <set>
#include <numeric>
#include <cmath>

using namespace std;

typedef long long int ll;

#define all(x) x.begin(),x.end()

const ll mod = 1e9+7;
const ll INF = 1e9;
const ll MAXN = 1e9;

int main()
{
    string s;
    cin >> s;

    int n = s.size()-1;
    ll sol = 0;
    for(int bit = 0; bit < (1<<n); bit++){
        ll now = 0;
        //cout << bitset<8>(bit) << endl;
        for(int i = 0; i < n+1; i++){
            now *= 10;
            now += s[i] - '0';
            if(!(bit&(1<<i))){  //bitが立ってない -> +があるので加算   bitが立ってる -> +がない
                //cout << bitset<8>(bit&(1<<i)) << endl;
                //cout << now << endl;
                sol += now;
                now = 0;
            }
        }
    }

    cout << sol << endl;

    return 0;
}
