#include <iostream>
#include <string>
#include <algorithm>
#include <cstdio>
#include <vector>
#include <queue>
#include <set>
#include <numeric>
#include <cmath>
 
using namespace std;
 
typedef long long int lld;
 
const lld mod = 1e9+7;
const lld INF = 1e9;
//const lld MAXN = 1e9;
 
int main()
{
    lld x,y;
    cin >> x >> y;
 
    lld sol = 1;
 
    while(x <= y)
    {
        x *= 2;
        if (x <= y)
        {
            sol++;
        }else
        {
            break;
        }
    }
 
    cout << sol << endl;
 
    return 0;
}
