#include <iostream>
#include <string>
#include <algorithm>
#include <cstdio>
#include <vector>
#include <queue>
#include <set>
#include <numeric>
#include <cmath>

using namespace std;

typedef long long int lld;

const lld mod = 1e9+7;
const lld INF = 1e9;
//const lld MAXN = 1e9;

int main()
{
    int n;
    int a[100] = {0};

    cin >> n;
    for(int i = 0; i < n; i++)
    {
        cin >> a[i];
    }

    sort(a,a+n,greater<int>());

    int alice=0,bob=0;

    for(int i = 0; i < n; i+= 2)
    {
        alice += a[i];
    }
    for(int i = 1; i < n; i+=2)
    {
        bob+= a[i];
    }

    cout << alice - bob << endl;

    return 0;
}
