#include <iostream>
#include <string>
#include <algorithm>
#include <cstdio>
#include <vector>
#include <queue>
#include <set>
#include <numeric>
#include <cmath>

using namespace std;

typedef long long int lld;

const lld mod = 1e9+7;
const lld INF = 1e9;
const lld MAXN = 50;

int main()
{
    int n;
    lld a[MAXN+1] = {0};

    cin >> n;
    for(int i = 1; i <= n; i++)
    {
        cin >> a[i];
    }

    lld max = 0;
    int num = 0;
    for(int i = 1; i <= n; i++)
    {
        if (abs(a[i]) > max)
        {
            max = abs(a[i]);
            num = i;
        }
    }

    max = a[num];


    vector<pair<int,int> > change;

    for(int i = 1; i <= n; i++)
    {
        pair<int,int> p;
        p.first = num;
        p.second = i;
        change.push_back(p);
    }
    if (max == 0)
    {
        cout << 0 << endl;
        return 0;
    }else if (max > 0)
    {
        for(int i = 2; i <= n; i++)
        {
            pair<int,int> p;
            p.first = i-1;
            p.second = i;
            change.push_back(p);
        }
    }else
    {
        for(int i = n-1; i >= 1; i--)
        {
            pair<int,int> p;
            p.first = i+1;
            p.second = i;
            change.push_back(p);
        }
    }

    cout << change.size() << endl;
    for(int i = 0; i < change.size(); i++)
    {
        cout << change[i].first << " " << change[i].second << endl;
    }
    return 0;
}
