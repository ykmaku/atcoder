#include <iostream>
#include <string>
#include <algorithm>
#include <cstdio>
#include <vector>
#include <queue>
#include <set>
#include <numeric>
#include <cmath>

using namespace std;

typedef long long int lld;

const lld mod = 1e9+7;
const lld INF = 1e9;
//const lld MAXN = 1e9;

int main()
{
	int n;
	cin >> n;
	vector<int> p(n);
	for(int i = 0; i < n; i++)
	{
		cin>>p[i];
	}
	for(int i = 0; i < n; i++)
	{
		p[i]--;
	}
	int ans = 0;
	for(int i = 0; i < n; i++)
	{
		if (p[i] == i)
		{
			if (i == n-1)
			{
				int sw = p[i];
				p[i] = p[i-1];
				p[i-1] = sw;
				ans++;
			}else
			{
				int sw = p[i];
				p[i] = p[i+1];
				p[i+1] = sw;
				ans++;
			}
		}
	}


	cout << ans << endl;

	return 0;
}
